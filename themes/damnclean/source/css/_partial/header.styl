#header
  text-shadow 0 0 1px #fff
  margin 50px auto
  margin-left auto
  margin-right auto
  max-width 900px

  a
    color ##58fb8
    &:hover
      color color-link
      text-decoration none
    
  h1
    font-weight bold
    font-size 2.5em
    line-height 45px
    height 45px

  h2
    font-weight bold
    font-size 0.9em
    line-height 1
    margin-top 10px
  
  #main-nav
    font-family font-title
    line-height 2.5em
    float right
    ul
      list-style none
      font-size 15px
      li
        float left
        margin-left 30px
        a
          height 45px
          line-height 45px
          display block
    @media screen and (max-width: 600px)
      float left
      margin-left -30px